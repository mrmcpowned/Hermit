{% extends "email-base.html.twig" %}

{% block emailbody %}
    {% embed "blocks/title-with-message.html.twig" %}

        {% block title "Welcome to ShellHacks!" %}
        {% block message "Thanks for signing up for ShellHacks! To complete your registration, make sure you click the button below to verify your email." %}
        {% block button %}
            {% embed "blocks/button.html.twig" %}
                {% block url "https://shellhacks.net/verify?key=#{key}" %}
                {% block text "Verify Email" %}
            {% endembed %}
        {% endblock %}

    {% endembed %}
{% endblock %}