{% extends "email-base.html.twig" %}

{% block hero_image "https://i.imgur.com/xL2960J.png" %}

{% block emailbody %}
    {% embed "blocks/title-with-message.html.twig" %}

        {% block title "Welcome to ShellHacks!" %}
        {% block message "Hiya #{user.firstName}, thanks for signing up for ShellHacks! To complete your registration, make sure you click the button below to verify your email." %}
        {% block button %}
            {% embed "blocks/button.html.twig" %}
                {% block url constant("SITE_ADDRESS") ~ "/verify?key=#{key}" %}
                {% block text "Verify Email" %}
            {% endembed %}
        {% endblock %}

    {% endembed %}
{% endblock %}