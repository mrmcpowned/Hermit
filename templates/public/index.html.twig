{% block javascript %}
    {#<script>#}
        $('.events').on('click', '.event', function (e) {
            e.preventDefault();
            if($(this).hasClass('selected')){
                $(this).toggleClass('selected');
                return false;
            }
            $('.event').removeClass('selected');
            $(this).addClass('selected');
        });

