{% extends "site-base.html.twig" %}

{% block title "Reset Forgotten Password" %}

{% block body %}
    <section class="page login">
        <section class="clamped modal small">
            <section class="content">
                <h1>{{ block('title', _self) }}</h1>
                <form class="form" action="/api/request-wrapper.php?type=pass" method="post">

                    <input type="hidden" name="change_type" value="{{ constant('VerificationType::RESET') }}">
                    <input type="hidden" name="key" value="{{ key }}">
                    <input type="password" data-validation-group="new_pass_check" name="new_pass" placeholder="New Password" required>
                    <input type="password" data-validation-group="new_pass_check" name="new_pass_check" placeholder="Confirm New Password" required>
                    <input type="submit" class="button" value="Reset Password">
                </form>
            </section>
            {% embed "html-stubs/dash-nav.html.twig" %}
                {% block buttons %}
                    <li><a href="/forgot" class="button">Forgot Password</a></li>
                {% endblock %}
            {% endembed %}
        </section>
    </section>

{% endblock %}

{% block javascript %}
    {% include "js-stubs/submit-form.js.twig" %}
{% endblock %}